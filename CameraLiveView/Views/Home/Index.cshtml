    <div class="col-md-12">
        <h2>Live Cam View</h2>

        <div id="video"></div>

        @if (Request.Browser.Browser == "InternetExplorer" ) // this isnt probably the best way to do it, but...
        {
            <video src = "/api/video/c1" autoplay preload>
               Your browser does not support the
               <code> video</code > element.
            </video>
        }
        else
        {
            <img src="/api/camera/c1" />
        }
    </div>
</div>

@section scripts {

    
    <script type="text/javascript">
        // you can also do the ie detection in js at runtime.  
        // ideally you shouldnt do this, use modinizr, but modinizr doesnt know how
        // detech the ability to play mjpeg

        function detectIE() {
            var ua = window.navigator.userAgent;

            var msie = ua.indexOf('MSIE ');
            if (msie > 0) {
                // IE 10 or older => return version number
                return parseInt(ua.substring(msie + 5, ua.indexOf('.', msie)), 10);
            }

            var trident = ua.indexOf('Trident/');
            if (trident > 0) {
                // IE 11 => return version number
                var rv = ua.indexOf('rv:');
                return parseInt(ua.substring(rv + 3, ua.indexOf('.', rv)), 10);
            }

            var edge = ua.indexOf('Edge/');
            if (edge > 0) {
                // Edge (IE 12+) => return version number
                return parseInt(ua.substring(edge + 5, ua.indexOf('.', edge)), 10);
            }

            // other browser
            return false;
        }

